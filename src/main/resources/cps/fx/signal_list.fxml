<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<AnchorPane prefHeight="800.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="cps.fx.SignalListController">
    <children>
        <SplitPane dividerPositions="0.17" orientation="VERTICAL" prefHeight="800.0" prefWidth="600.0">
            <items>
                <!-- Górna część -->
                <AnchorPane maxHeight="Infinity" maxWidth="Infinity" prefHeight="0.0" prefWidth="0.0"
                            SplitPane.resizableWithParent="true">
                    <children>
                        <SplitPane dividerPositions="0.3" orientation="VERTICAL" maxHeight="Infinity" maxWidth="Infinity" prefHeight="0.0"
                                   prefWidth="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <items>
                                <HBox SplitPane.resizableWithParent="true" maxHeight="Infinity" maxWidth="Infinity" >
                                    <children>
                                        <SplitPane dividerPositions="0.9">
                                            <items>
                                                <ComboBox fx:id="signalTypeComboBox" maxHeight="Infinity" maxWidth="Infinity"
                                                          prefHeight="0.0" prefWidth="0.0"/>
                                                <Button fx:id="createSignalButton" maxHeight="Infinity" maxWidth="Infinity"/>
                                            </items>
                                        </SplitPane>
                                    </children>
                                </HBox>
                                <VBox id=" parametersVBox" maxHeight="Infinity" maxWidth="Infinity" prefHeight="0.0"
                                      prefWidth="0.0"/>
                            </items>
                        </SplitPane>
                    </children>
                </AnchorPane>

                <!-- Dolna część -->
                <AnchorPane maxHeight="Infinity" maxWidth="Infinity" prefHeight="0.0" prefWidth="0.0"
                            SplitPane.resizableWithParent="true">
                    <children>
                        <ListView fx:id="signalsListView" maxHeight="Infinity" maxWidth="Infinity" prefHeight="0.0"
                                  prefWidth="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
